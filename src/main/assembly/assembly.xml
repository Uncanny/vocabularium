<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3
		http://maven.apache.org/xsd/assembly-1.1.3.xsd">

	<id>dist</id>

	<formats>
		<format>zip</format>
	</formats>

	<baseDirectory>vocabularium-${project.version}</baseDirectory>

	<includeBaseDirectory>true</includeBaseDirectory>

	<fileSets>
		<fileSet>
			<outputDirectory>conf</outputDirectory>
			<includes>
				<include>logging.cfg</include>
			</includes>
			<directory>${basedir}${file.separator}src${file.separator}main${file.separator}assembly${file.separator}resources${file.separator}</directory>
			<filtered>false</filtered>
		</fileSet>
		<fileSet>
			<outputDirectory></outputDirectory>
			<includes>
				<include>readme.txt</include>
			</includes>
			<directory>${basedir}${file.separator}src${file.separator}main${file.separator}assembly${file.separator}resources${file.separator}</directory>
			<filtered>true</filtered>
		</fileSet>
		<fileSet>
			<outputDirectory></outputDirectory>
			<includes>
				<include>LICENSE</include>
				<include>NOTICE</include>
			</includes>
			<directory>${basedir}${file.separator}target${file.separator}config${file.separator}legal${file.separator}</directory>
			<filtered>true</filtered>
		</fileSet>
		<fileSet>
			<outputDirectory></outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
			<directory>${basedir}${file.separator}target${file.separator}client${file.separator}</directory>
			<filtered>false</filtered>
		</fileSet>
	</fileSets>

</assembly>